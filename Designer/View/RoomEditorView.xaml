<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Designer.View"
      xmlns:ViewModel="clr-namespace:Designer.ViewModel" x:Class="Designer.View.RoomEditorView"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="KantoorInrichting - Ruimte Editor">

    <Page.DataContext>
        <ViewModel:RoomEditorViewModel/>
    </Page.DataContext>

    <Grid>
        <Label Content="Ruimte Toevoegen" HorizontalAlignment="Center" FontSize="35" Margin="0,71,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="RoomNameTextBox" HorizontalAlignment="Left" Margin="77,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" TextChanged="RoomNameTextBox_TextChanged"/>
        <Button x:Name="SaveRoomButton" Content="Opslaan" Background="Bisque" FontFamily="Forte" HorizontalAlignment="Left" VerticalAlignment="Center" Height="52" Width="190" Click="SaveRoomButton_Click" RenderTransformOrigin="0.906,0.372" Margin="547,0,0,0"/>
        <Label Content="Ruimte naam:" HorizontalAlignment="Left" Margin="72,185,0,0" VerticalAlignment="Top"/>
        <Label Content="Ruimte breedte:" HorizontalAlignment="Left" Margin="545,185,0,0" VerticalAlignment="Top"/>
        <Label Content="Ruimte lengte" HorizontalAlignment="Left" Margin="947,185,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="RoomWidthTextBox" HorizontalAlignment="Left" Margin="547,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" TextChanged="RoomWidthTextBox_TextChanged" />
        <TextBox x:Name="RoomLengthTextBox" HorizontalAlignment="Left" Margin="953,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" TextChanged="RoomLengthTextBox_TextChanged" />
        <!-- voor de plakcheck DataObject.Pasting="WidthLengthTypeCheck"  -->
        <!-- voor de int controles TextChanged="RoomWidthTextBox_TextChanged" -->
    </Grid>
</Page>
