<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:Designer.ViewModel" x:Class="Designer.View.RoomEditorView"
    mc:Ignorable="d"
    d:DesignHeight="720" d:DesignWidth="1280"
    Title="KantoorInrichting - Ruimte Editor">

    <Page.DataContext>
        <viewModel:RoomEditorViewModel />
    </Page.DataContext>

    <Grid>
        <!--Naam Pagina-->
        <Label Content="Ruimte Toevoegen" HorizontalAlignment="Left" FontSize="35" Margin="10,10,0,0"
               VerticalAlignment="Top" />



        <!--naam invoerveld-->
        <TextBox MaxLength="25" HorizontalAlignment="Left" Margin="363,130,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="190"
                 Text="{Binding Name, UpdateSourceTrigger = PropertyChanged}" />

        <Label Content="Ruimte naam:" HorizontalAlignment="Left" Margin="358,92,0,0" VerticalAlignment="Top" />




        <!--Opslaan knop-->
        <Button Content="Opslaan" Background="Bisque" FontFamily="Verdana" FontSize="30"
                HorizontalAlignment="Center" VerticalAlignment="Top" Height="52" Width="190"
                RenderTransformOrigin="0.906,0.372" Margin="0,588,0,0"
                Command="{Binding Submit}" />


        <Button Content="Vierhoek" HorizontalAlignment="Left" Height="252" Margin="363,265,0,0" VerticalAlignment="Top" Width="253" Command="{Binding Template}" CommandParameter="{Binding VierhoekTemplate}" />

        <Button Content="Hoek Vormig" HorizontalAlignment="Left" Height="252" Margin="666,265,0,0" VerticalAlignment="Top" Width="280" Command="{Binding Template}" CommandParameter="{Binding HoekvormigTemplate}"/>

    </Grid>
</Page>