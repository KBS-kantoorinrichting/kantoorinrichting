<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    xmlns:viewModel="clr-namespace:Designer.ViewModel" x:Class="Designer.View.RoomEditorView"
    mc:Ignorable="d"
    d:DesignHeight="720" d:DesignWidth="1280"
    Title="KantoorInrichting - Ruimte Editor">


    <Page.DataContext>
        <viewModel:RoomEditorViewModel />
    </Page.DataContext>

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <!--Naam Pagina-->
        <Label Content="Ruimte Toevoegen" HorizontalAlignment="Left" FontSize="35" Margin="10,10,0,0"
               VerticalAlignment="Top" />

        <!--naam invoerveld -->
        <TextBox MaxLength="25" HorizontalAlignment="Left" Margin="94,262,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="190"
                 Text="{Binding Name, UpdateSourceTrigger = PropertyChanged}"/>

        <Label Content="Ruimte naam:" HorizontalAlignment="Left" Margin="89,225,0,0" VerticalAlignment="Top" />

        <!-- template knoppen -->


        <Button BorderThickness="0" Command="{Binding TemplateButton}" Margin="326,86,554,137" Grid.RowSpan="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.CommandParameter>
                <s:Int32>0</s:Int32>
            </Button.CommandParameter>
            <StackPanel>
                <Image Name="TemplateButton0" Source="{Binding Image0}" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" />
            </StackPanel>
        </Button>


        <Button BorderThickness="0" Command="{Binding TemplateButton}" Margin="777,86,103,137" Grid.RowSpan="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.CommandParameter>
                <s:Int32>1</s:Int32>
            </Button.CommandParameter>
            <StackPanel>
                <Image Name="TemplateButton1" Source="{Binding Image1}" />
            </StackPanel>
        </Button>

        <!--Breedte invoerveld-->
        <Label Content="Ruimte breedte:" HorizontalAlignment="Left" Margin="89,328,0,0" VerticalAlignment="Top" Grid.RowSpan="2" />

        <TextBox Name="Width" MaxLength="25" HorizontalAlignment="Left" Margin="95,44,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="189" Grid.Row="1">
            <TextBox.Text>
                <Binding Path="Width" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <viewModel:StringToIntValidationRule ValidationStep="RawProposedValue" />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <TextBlock Foreground="Red" Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=Width}"
                   Margin="95,67,953,89" Grid.Row="1" />


        <!--Lengte invoerveld-->
        <Label Content="Ruimte lengte" HorizontalAlignment="Left" Margin="89,87,0,0" VerticalAlignment="Top" Grid.Row="1" />

        <TextBox Name="Length" MaxLength="25" HorizontalAlignment="Left" Margin="95,113,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="189" Grid.Row="1">
            <TextBox.Text>
                <Binding Path="Length" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <viewModel:StringToIntValidationRule ValidationStep="RawProposedValue" />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <TextBlock Foreground="Red" Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=Length}"
                   Margin="94,77,954,79" Grid.Row="1" />

        <!--Opslaan knop-->
        <Button Content="Opslaan" Background="Bisque" FontFamily="Verdana" FontSize="30"
                HorizontalAlignment="Left" VerticalAlignment="Top" Height="52" Width="190"
                RenderTransformOrigin="0.906,0.372" Margin="698,240,0,0"
                Command="{Binding Submit}" Grid.Row="1" />
        <TextBlock HorizontalAlignment="Left" Margin="706,51,0,0" Text="Kies een Template" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>