<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:Designer.ViewModel" x:Class="Designer.View.RoomEditorView"
    mc:Ignorable="d"
    d:DesignHeight="720" d:DesignWidth="1280"
    Title="KantoorInrichting - Ruimte Editor">

    <Page.DataContext>
        <viewModel:RoomEditorViewModel />
    </Page.DataContext>

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <!--Naam Pagina-->
        <Label Content="Ruimte Toevoegen" HorizontalAlignment="Left" FontSize="35" Margin="10,10,0,0"
               VerticalAlignment="Top" />

        <!--naam invoerveld-->
        <TextBox MaxLength="25" HorizontalAlignment="Left" Margin="363,130,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="190"
                 Text="{Binding Name, UpdateSourceTrigger = PropertyChanged}"/>

        <Label Content="Ruimte naam:" HorizontalAlignment="Left" Margin="358,92,0,0" VerticalAlignment="Top" />
        <!-- template knoppen -->

        <RadioButton Checked="Btn1_Checked" GroupName="Template" Width="253" Grid.RowSpan="2" Margin="720,251,307,-251" RenderTransformOrigin="0.5,0.5">
            <Image Source="../Assets/Vierhoek.jpg" Height="228" Width="231"></Image>
        </RadioButton>
        <RadioButton Checked="Btn2_Checked" GroupName="Template" Grid.RowSpan="2" Checked="RadioButton_Checked" Margin="396,254,600,225">
            <Image Source="../Assets/Hoekvormig.jpg" Height="216" Width="232"></Image>
        </RadioButton>



        <!--Breedte invoerveld-->
        <Label Content="Ruimte breedte:" HorizontalAlignment="Left" Margin="88,300,0,0" VerticalAlignment="Top" />

        <TextBox Name="Width" MaxLength="25" HorizontalAlignment="Left" Margin="94,16,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="189" Grid.Row="1">
            <TextBox.Text>
                <Binding Path="Width" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <viewModel:StringToIntValidationRule ValidationStep="RawProposedValue" />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <TextBlock Foreground="Red" Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=Width}"
                   Margin="94,39,954,117" Grid.Row="1" />


        <!--Lengte invoerveld-->
        <Label Content="Ruimte lengte" HorizontalAlignment="Left" Margin="88,59,0,0" VerticalAlignment="Top" Grid.Row="1" />

        <TextBox Name="Length" MaxLength="25" HorizontalAlignment="Left" Margin="94,85,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="189" Grid.Row="1">
            <TextBox.Text>
                <Binding Path="Length" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <viewModel:StringToIntValidationRule ValidationStep="RawProposedValue" />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <TextBlock Foreground="Red" Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=Length}"
                   Margin="93,116,955,40" Grid.Row="1" />



        <!--Opslaan knop-->
        <Button Content="Opslaan" Background="Bisque" FontFamily="Verdana" FontSize="30"
                HorizontalAlignment="Center" VerticalAlignment="Top" Height="52" Width="190"
                RenderTransformOrigin="0.906,0.372" Margin="0,240,0,0"
                Command="{Binding Submit}" Grid.Row="1" />




    </Grid>
</Page>