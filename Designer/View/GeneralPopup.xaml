<Window x:Class="Designer.View.GeneralPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Designer.View"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, RelativeSource={RelativeSource Self}}"
        Height="200" Width="400">
    <Grid>
        <!-- Text weergeven -->
        <Label Content="{Binding Path=Message, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" HorizontalAlignment="Center" Margin="0,34,0,0"
               VerticalAlignment="Top" />
        
        <!-- verdergaan knop -->
        <Button Background="Bisque" FontFamily="Verdana" FontSize="10" Content="Verdergaan"
                HorizontalAlignment="Center" Margin="0,114,0,0" VerticalAlignment="Top" Command="{Binding Path=Continue, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                Height="24" Width="74" />
    </Grid>
</Window>
