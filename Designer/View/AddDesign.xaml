<Window x:Class="Designer.View.AddDesign"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModel="clr-namespace:Designer.ViewModel"
        mc:Ignorable="d"
        Title="AddDesign" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:AddDesignModel />
    </Window.DataContext>
    <Grid>
        <TextBox Margin="10,121,10,0" TextWrapping="Wrap" VerticalAlignment="Top"
                 Text="{Binding Name}"/>
