<Page x:Class="Designer.View.ViewDesignPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Designer.View"
      xmlns:viewModel="clr-namespace:Designer.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewDesignPage" Initialized="Page_Initialized">
    <Page.Resources>
        <viewModel:ViewDesignViewModel x:Key="ViewModel"/>
    </Page.Resources>
    <Grid>
        <TabControl x:Name="Tabs" Margin="540,20,0,0" HorizontalAlignment="Left" Width="260">
            <TabItem Header="Catalogus">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Overzicht">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Canvas Name="Editor" Margin="0,25,260,0">
        </Canvas>

    </Grid>
</Page>
