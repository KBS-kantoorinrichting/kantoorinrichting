<Window x:Class="Designer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Designer.ViewModel"
        mc:Ignorable="d"
        Title="Kantoor Ontwerper" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <DockPanel x:Name="Window" LastChildFill="False">
            <Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">
                <MenuItem Header="Application">
                    <MenuItem Header="TODO"/>
                    <MenuItem Header="Afsluiten" Click="ExitApplication"/>
                </MenuItem>
                <MenuItem Header="Ruimtes" Click="MenuItemNavigateExamplePage" />
                <MenuItem Header="Product catalogus" Click="MenuItemNavigateExamplePage" />
                <MenuItem Header="Ontwerp toevoegen" Click="MenuItemNavigateAddDesignPage" />
            </Menu>
        </DockPanel>
        <Frame Name="Container" NavigationUIVisibility="Hidden" Margin="0,20,0,0"/>
    </Grid>
</Window>
